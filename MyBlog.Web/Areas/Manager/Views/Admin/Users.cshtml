@model List<AdminUserListViewModel>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
    int count = 0;
}
<br />

<div class="table-responsive-sm">
    <table class="table table-light table-striped table-bordered mt-3">
    <tr>
        <td>#</td>
        <td>Kullanıcı Adı</td>
        <td>Email</td>
        <td>Roller</td>
        <td>İşlemler</td>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">Hiç bir üye yoktur</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {

            <tr>
                <td class=" text-center">
                    @{
                        count++;
                    }
                    @count
                </td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                    <td user-roles="@item.Id"></td>
                    <td><a class="btn btn-secondary" asp-action="RoleAssign" asp-route-id="@item.Id" asp-area="Manager">Rol Ata/Sil</a></td>
            </tr>
        }
    }
</table>


        </div>