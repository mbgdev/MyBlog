@model MemberAppUserViewModel
@{
    ViewData["Title"] = "EditMember";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mt-5">Bilgi Güncellme Formu </h2>

<div class="row">
    <div class="col-lg-8 offset-2">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-area="Manager" asp-controller="Member" asp-action="EditMember" method="post" enctype="multipart/form-data">

            <div class="mt-3">
                <label class="form-label"> E-Posta</label>
                <input class="form-control" type="email" asp-for="Email" placeholder="E-Posta Adresi Giriniz">
            </div>

            <span asp-validation-for="Email" class="text-danger mt-1"></span>



            <div class="mt-3">
                <label class="form-label"> Kullanıcı Adı </label>
                <input class="form-control" type="text" asp-for="UserName" placeholder="Kullanıcı Adını Giriniz">
            </div>

            <span asp-validation-for="UserName" class="text-danger"></span>

            <div class="mt-3">
                <label class="form-label"> Ad </label>
                <input class="form-control" type="text" asp-for="Name" placeholder="Adınızı Giriniz">
            </div>

            <span asp-validation-for="Name" class="text-danger"></span>

            <div class="mt-3">
                <label class="form-label"> Soyad </label>
                <input class="form-control" type="text" asp-for="Surname" placeholder="Soyadınız Giriniz">
            </div>

            <span asp-validation-for="Surname" class="text-danger"></span>



            <div class="mt-3">
                <label class="form-label"> Şehir </label>
                <input class="form-control" type="text" asp-for="City" placeholder="Şehir Adını Giriniz">
            </div>

            <span asp-validation-for="City" class="text-danger"></span>

            <div class="mt-3">
                <label class="form-label"> Doğum Günü </label>
                <input class="form-control" type="datetime-local" asp-for="BirthDay">
            </div>

            <span asp-validation-for="BirthDay" class="text-danger"></span>


            <div class="mt-3">
                <label class="form-label"> TELEFON </label>
                <input class="form-control" type="text" asp-for="PhoneNumber" placeholder="Telefon Numarınızı Giriniz">
            </div>

            <span asp-validation-for="PhoneNumber" class="text-danger"></span>


            <div class="form-group">

                <label class="control-label">Resim</label>
                <input class="form-control" type="file" name="userPicture" />
            </div>

            <input type="hidden" asp-for="ImageUrl" />

            <div class="mt-3">
                <button class="btn btn-primary" type="submit">Güncelle</button>
            </div>
        </form>


    </div>
</div>