@model MemberAppUserViewModel
@{
    ViewData["Title"] = "Kullanıcı Anasayfa";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}
<br />
<h3 class="text-center">Kullanıcı Bilgileri</h3>
<div class="row">
    <div class="col-sm-3 text-center">
        <br />
        <img style="width:180px; height:180px" class="rounded-circle" src="@Model.ImageUrl" />
    </div>
    <div class="col-sm-8">


        <br />

        <table class="table table-light table-striped table-bordered">
            <tr>
                <th>Kullanıcı ismi</th>
                <td>@Model.UserName </td>
            </tr>
            <tr>
                <th>Ad Soyad</th>
                <td>@Model.Name @Model.Surname </td>
            </tr>
            <tr>
                <th>E-posta</th>
                <td>@Model.Email</td>
            </tr>

            <tr>
                <th>Telefon no</th>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <th>Şehir</th>
                <td>@Model.City</td>
            </tr>

            <tr>
                <th>Doğum Günü</th>
                <td>
                    @if (Model.BirthDay != null)
                    {
                        @Model.BirthDay.ToShortDateString()
                    }
                    else

                    {
                        <span>belirtilmemiş</span>
                    }
                </td>
            </tr>

        



        </table>
    </div>
</div>